<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <title>Document</title>
  </head>
  <body>
    <h1>company CRUD</h1>
    <h2>create new company</h2>
    <label for="name">Name:</label> <br />
    <input type="text" name="name" id="name" /> <br />
    <label for="registerId">RegisterId:</label> <br />
    <input type="text" name="RegisterId" id="registerId" /> <br />
    <label for="name">City:</label> <br />
    <input type="text" name="city" id="city" /> <br />
    <label for="province">Province:</label> <br />
    <input type="text" name="Province" id="province" /> <br />
    <label for="phone">Phone:</label> <br />
    <input type="text" name="Phone" id="phone" /> <br />
    <button
      type="button"
      class="btn btn-primary"
      id="createBtn"
      style="margin-top: 5px"
    >
      Create
    </button>

    <hr />
    <hr />
    <h1>Companies list</h1>
    <% %>
    <table class="table" id="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">name</th>
          <th scope="col">registerId</th>
          <th scope="col">city</th>
          <th scope="col">province</th>
          <th scope="col">phone</th>
          <th scope="col">view profile</th>
          <th scope="col">Edit</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < data.length; i++) { %>

        <tr style="cursor: pointer" id=" <%= i+1  %>">
          <th scope="row"><%= i+1 %></th>
          <td id="tableName<%= i+1 %>"><%= data[i].name %></td>
          <td id="tableRegisterId<%= i+1 %>"><%= data[i].registerId %></td>
          <td id="tableCity<%= i+1 %>"><%= data[i].city %></td>
          <td id="tableProvince<%= i+1 %>"><%= data[i].province %></td>
          <td id="tablePhone<%= i+1 %>"><%= data[i].phone %></td>
          <td>
            <button
              id="<%= data[i]._id %>"
              onclick="profileBtn(`<%= data[i]._id %>`)"
            >
              view profile
            </button>
          </td>
          <td>
            <button
              data-bs-toggle="modal"
              data-bs-target="#modal<%= i+1  %>"
            >
              edit
            </button>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>

    <% for (var i = 0; i < data.length; i++) { %>

    <!-- Modal -->
    <div
      class="modal fade"
      id="modal<%= i+1  %>"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit Company</h5>
            <button
              type="button"
              class="close"
              data-bs-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <label for="name">Name:</label> <br />
            <input type="text" name="name" id="modalname<%= i+1  %>" value="<%= data[i].name %>" /> <br />
            <label for="name">City:</label> <br />
            <input type="text" name="city" id="modalcity<%= i+1  %>"  value="<%= data[i].city %>"/> <br />
            <label for="province">Province:</label> <br />
            <input type="text" name="Province" id="modalprovince<%= i+1  %>" value="<%= data[i].province %>" /> <br />
            <label for="phone">Phone:</label> <br />
            <input type="text" name="Phone" id="modalphone<%= i+1  %>"  value="<%= data[i].phone %>"/> <br />
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal" onclick="deleteBtn(`<%= data[i].registerId %>`)">Delete</button>
            <button type="button" class="btn btn-primary"   data-bs-dismiss="modal" onclick="editBtn(`<%= data[i].registerId %>`, `<%= i+1  %>`)">Save changes</button>
          </div>
        </div>
      </div>
    </div>

    <% } %>

    <script src="/js/company.js"></script>
  </body>
</html>
